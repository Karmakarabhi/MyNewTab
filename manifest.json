{
  "manifest_version": 3,
  "name": "Modern Dashboard",
  "version": "1.0",
  "description": "A clean, modern new tab page with weather and wallpaper.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "geolocation",
    "storage"
  ],
  "host_permissions": [
    "https://api.open-meteo.com/*",
    "https://api.github.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}